{{#section "script"}}
    <script id="editAddressModal-template" type="text/x-handlebars-template">
    {{> client/modals/editAddressModal}}
    </script>
    <script id="removeAddressModal-template" type="text/x-handlebars-template">
    {{> client/modals/removeAddressModal}}
    </script>

    <script>

        let editAddressModal = async function () {
            var source = document.getElementById("editAddressModal-template").innerHTML;
            var template = await Handlebars.compile(source);
            var html = await template();
            document.getElementById("modals").innerHTML = html;
            $("#editAddressModal").modal("show");
        };

        let removeAddressModal = async function () {
            var source = document.getElementById("removeAddressModal-template").innerHTML;
            var template = await Handlebars.compile(source);
            var html = await template();
            document.getElementById("modals").innerHTML = html;
            $("#removeAddressModal").modal("show");
        };

    </script>

