<div class="container">
    <div class="row">
        <div class="col-md-3 d-none d-md-block py-5 text-muted costumer-sidebar">
            <nav>
                <ul class="list-unstyled position-fixed">
                    <li><a href="#costumer-settings" class="link-dark rounded">Kullanıcı Ayarları</a></li>
                    <li><a href="#address-settings" class="link-dark rounded">Adres Bilgilerim</a></li>
                    <li><a href="#old-orders" class="link-dark rounded">Eski Siparişlerim</a></li>
                </ul>
            </nav>

        </div>
        <div class="col-12 col-md-9">
            <section id="costumer-settings" class="py-5">
                <div class="card">
                    <div class="card-header">
                        Kullanıcı Ayarları
                    </div>
                    <div class="card-body">
                        <h5>Genel Bilgiler</h5>
                        <form class="pb-5 pt-2" action="">
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="displayName">İsim Soyisim</label></div>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="displayName" name="displayName"
                                        value="{{costumer.displayName}}" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="email">Email</label></div>
                                <div class="col-9">
                                    <input type="email" class="form-control" id="email" name="email"
                                        value="{{costumer.email}}" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="phoneNumber">Telefon Numarası</label></div>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                                        value="{{costumer.phoneNumber}}" />
                                </div>
                            </div>
                            <button class="btn btn-yellow float-end" type="submit">Bilgilerimi Güncelle</button>
                        </form>
                        <hr />
                        <h5>Şifre Değiştirme</h5>
                        <form class="pb-5 pt-2" action="">
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="oldPassword">Eski şifre</label></div>
                                <div class="col-9">
                                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="newPassword">Yeni Şifre</label></div>
                                <div class="col-9">
                                    <input type="password" class="form-control" id="newPassword" name="newPassword" />
                                </div>

                            </div>
                            <div class="row mb-3">
                                <div class="col-3 d-flex justify-content-end align-items-center"><label
                                        for="rePassword">Yeni şifre Kontrol</label></div>
                                <div class="col-9">
                                    <input type="password" class="form-control" id="rePassword" name="rePassword" />
                                </div>
                            </div>
                            <button class="btn btn-myred float-end" type="submit">Şifremi Güncelle</button>
                        </form>
                    </div>
                </div>
            </section>
            <section id="address-settings" class="py-5">
                <div class="card">
                    <div class="card-header">
                        Adres Bilgileri
                    </div>
