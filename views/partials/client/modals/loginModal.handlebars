<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Üye Girişi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="loginPostForm" role="form" method="post"
                    onsubmit="validateFormSubmit(event, this)" action="/login">
                    <div class="form-floating pb-2">
                        <input data-valid="required" type="email" class="form-control" name="email" id="email" placeholder="E-mail">
                        <label for="email">E-mail</label>
                    </div>
                    <div class="form-floating pb-2">
                        <input data-valid="required" type="password" class="form-control" name="password" id="password" placeholder="Şifre">
                        <label for="password">Şifre</label>
                    </div>
                    <div class="checkbox mb-3 mt-1 ps-2">
                        <input type="checkbox" name="remember" id="remember">
                        <label for="remember">
                            Beni Hatırla
                        </label>
                    </div>
                    <div class="form-floating">
                        <button class="w-100 btn btn-lg btn-yellow" type="submit">Giriş Yap</button>
                    </div>
                    
                    <div class="form-floating">
                        <div class="row">
                            <div class="col-12 pt-3 col-sm-6">
                                <button class="w-100 btn btn-myred" data-bs-dismiss="modal" onclick="registerModal()">Üye
                                Ol</button>
                            </div>
                            <div class="col-12 pt-3 col-sm-6">
                                <button class="w-100 btn btn-myred" data-bs-dismiss="modal"
                                onclick="rePasswordModal()">Şifremi Unuttum</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>