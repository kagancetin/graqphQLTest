<div class="modal fade show" id="addOptionModal" aria-modal="true" role="dialog"
    style="padding-right: 16px; display: block;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yeni Seçenek Ekle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form role="form" method="post" onsubmit="addOptionSubmit(event)">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="optionName">Seçenek Adı</label>
                        <input data-valid="required" type="text" id="optionName" name="optionName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="optionDisplayName">Görünen Açıklama</label>
                        <input data-valid="required" type="text" id="optionDisplayName" name="optionDisplayName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="optionDetailType">Grup</label>
                        <select id="optionDetailType" name="optionDetailType" class="form-control custom-select">
                            <option value="1">Seç</option>
                            <option value="2">Çıkar</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Seçenek Elemanları</label>
                        <div id="optionDetailContentList">
                            
                        </div>
                    </div>
                    <button type="button" class="btn btn-default" onclick="addOptionDetailName()">
                        Seçenek Elemanı Ekle
                    </button>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>