        <div class="col-4 d-flex align-items-center mb-2">
          <label class="m-0">Salı</label>
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.saliAcilis}}" name="saliAcilis" />
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.saliKapanis}}" name="saliKapanis" />
        </div>
        <div class="col-4 d-flex align-items-center mb-2">
          <label class="m-0">Çarşamba</label>
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.carsambaAcilis}}" name="carsambaAcilis" />
