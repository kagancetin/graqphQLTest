        <div class="col-4 d-flex align-items-center mb-2">
          <label class="m-0">Cuma</label>
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.cumaAcilis}}" name="cumaAcilis" />
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.cumaKapanis}}" name="cumaKapanis" />
        </div>
        <div class="col-4 d-flex align-items-center mb-2">
          <label class="m-0">Cumartesi</label>
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.cumartesiAcilis}}" name="cumartesiAcilis" />
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.cumatesiKapanis}}" name="cumatesiKapanis" />
        </div>
        <div class="col-4 d-flex align-items-center mb-2">
          <label class="m-0">Pazar</label>
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.pazarAcilis}}" name="pazarAcilis" />
        </div>
        <div class="col-4 mb-2">
          <input type="time" data-valid="required" class="form-control" value="{{workingHours.pazarKapanis}}" name="pazarKapanis" />
